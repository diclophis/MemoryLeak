<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "http://www.asahi-net.or.jp/~cs8k-cyu/bulletml/bulletml.dtd">

<bulletml type="vertical" xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">
  <action label="top">
    <repeat>
      <times>9999</times>
      <action>
        <fire>
          <direction>-45</direction>
          <speed>10.0</speed>
          <bullet/>
        </fire>
        <wait>5</wait>
        <repeat>
          <times>50</times>
          <action>
            <fire>
              <direction type="sequence">2</direction>
              <speed>10.0</speed>
              <bullet/>
            </fire>
            <wait>5</wait>
          </action>
        </repeat>
        <repeat>
          <times>100</times>
          <action>
            <fire>
              <direction>-45+$rand*90</direction>
              <speed>4.0+$rand*2.0</speed>
              <bullet/>
            </fire>
            <wait>1</wait>
          </action>
        </repeat>
      </action>
    </repeat>
  </action>
</bulletml>